<Alloy>
    <Collection src="menus" />
    <ScrollView id="main" dataCollection="menus">
        <View class="itemView" dataName="{name}" onClick="doClick" onDblclick="doDblclick">
            <View class="itemSubView">
                <View class="itemTitleView">
                    <Label class="title" dataName="{name}" text="{title}" />
                </View>
            </View>
        </View>
    </ScrollView>
</Alloy>
