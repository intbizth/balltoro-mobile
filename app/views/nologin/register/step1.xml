<Alloy>
    <Model src="register" />
    <Window id="main" onSingletap="doBlur">
        <Widget id="navbarView" src="com.intbizth.balltoro.navbar" />
        <ScrollView id="content">
            <View id="contentTop">
                <TextField id="username" class="textField" value="{register.username}" />
                <TextField id="email" class="textField" value="{register.email}" />
                <TextField id="password" class="textField" value="{register.password}" />
                <TextField id="confirmPassword" class="textField" value="{register.confirmPassword}" />
            </View>
            <View id="contentBottom">
                <View id="nextButton">
                    <Label id="nextLabel" />
                </View>
            </View>
        </ScrollView>
    </Window>
</Alloy>
