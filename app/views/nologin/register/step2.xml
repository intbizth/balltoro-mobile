<Alloy>
    <Window id="main" onSingletap="doBlur">
        <Widget id="navbarView" src="com.intbizth.balltoro.navbar" />
        <ScrollView id="content">
            <View id="contentTop" >
                <View id="profileImage" />
                <View id="photo">
                    <ImageView id="addPhoto" />
                    <ImageView id="camera" />
                </View>
                <TextField id="name" class="textField" />
                <TextField id="surname" class="textField" />
            </View>
            <View id="contentBottom">
                <View id="nextButton">
                    <Label id="nextLabel" />
                </View>
            </View>
        </ScrollView>
    </Window>
</Alloy>
