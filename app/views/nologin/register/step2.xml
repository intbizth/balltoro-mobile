<Alloy>
    <Window id="main" onSingletap="doBlur">
        <Widget id="navbarView" src="com.intbizth.balltoro.navbar" />
        <ScrollView id="content">
            <View id="contentTop" >
                <View id="profileView">
                    <View id="profileSubView">
                        <ImageView id="profile" />
                    </View>
                </View>
                <View id="photoCameraView">
                    <View id="photoCameraSubView">
                        <View id="addPhoto" />
                        <View id="openCamera" />
                        <View id="removePhoto" />
                    </View>
                </View>
                <TextField id="name" class="textField" />
                <TextField id="surname" class="textField" />
            </View>
            <View id="contentBottom">
                <View id="nextButton">
                    <Label id="nextLabel" />
                </View>
            </View>
        </ScrollView>
    </Window>
</Alloy>
